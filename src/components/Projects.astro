    image: "/projects/contraseñasseguras.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JS],
  },
];
---

<div class="flex flex-wrap gap-x-24">
  {
    PROJECTS.map(({ title, description, image, tags, link, github }) => (
      <article class="mb-16">
        <h3 class="text-[27px] font-semibold text-yellow-300 mb-2">{title}</h3>{" "}
        <SeeOnGithub github={github} />
        <p class="text-lg mb-4 text-pretty text-white/80">{description}</p>
        <ul class="flex gap-x-2 flex-row mb-2 select-none">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <a href={link} target="_blank" rel="noopener noreferrer">
          <img
            class="rounded shadow-2xl shadow-white/30"
            src={image}
            alt={`Captura de pantalla del proyecto ${image}`}
          />
        </a>
      </article>
    ))
  }
</div>
