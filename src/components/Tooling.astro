  <ToolingItem language="TailwindCSS">
    <TailwindIcon class="size-24 mb-3" />
  </ToolingItem>
  <ToolingItem language="TypeScript">
    <TypeScriptIcon class="size-24 mb-3" />
  </ToolingItem>
  <ToolingItem language="React">
    <ReactIcon class="size-24 mb-3" />
